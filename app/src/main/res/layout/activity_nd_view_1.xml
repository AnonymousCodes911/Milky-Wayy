<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="ndView1VM" type="com.utkarshsapplication.app.modules.ndview1.data.viewmodel.NdView1VM"/>
    </data>
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linear2ndview1"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylegray_300">
        <ImageView android:id="@+id/imageExploreremoveb"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_254pxh"
            android:layout_marginEnd="@dimen/_31pxh"
            android:layout_marginStart="@dimen/_31pxh"
            android:layout_marginTop="@dimen/_54pxv"
            android:layout_width="@dimen/_249pxh"
            android:scaleType="fitXY"
            imageRes="@{@drawable/img_exploreremoveb}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_exploreremoveb"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearColumnexplore"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_39pxv"
            android:layout_marginEnd="@dimen/_17pxh"
            android:layout_marginStart="@dimen/_31pxh"
            android:layout_marginTop="@dimen/_40pxv"
            android:layout_width="match_parent" android:orientation="vertical">
            <TextView android:ellipsize="end"
                android:id="@+id/txtExplore"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@{ndView1VM.ndView1Model.txtExplore}"
                style="@style/txtInterbold30" tools:text="@string/lbl_explore"/>
            <TextView android:id="@+id/txtDescription"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_12pxv"
                android:layout_width="match_parent"
                android:text="@{ndView1VM.ndView1Model.txtDescription}"
                style="@style/txtInterthin16" tools:text="@string/msg_we_ll_show_you"/>
            <ImageView android:id="@+id/imageGroupTwo"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_9pxh"
                android:layout_marginEnd="@dimen/_120pxh"
                android:layout_marginStart="@dimen/_120pxh"
                android:layout_marginTop="@dimen/_59pxv"
                android:layout_width="@dimen/_65pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_group2"
                tools:ignore="ContentDescription" tools:src="@drawable/img_group2"/>
            <LinearLayout android:id="@+id/linearRowskip"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_29pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:ellipsize="end" android:gravity="center"
                    android:id="@+id/btnSkip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:paddingBottom="@dimen/_5pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_5pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_skip"
                    android:textAllCaps="false"
                    style="@style/btnSolidRoundedOutline" tools:text="@string/lbl_skip"/>

                <LinearLayout
                    android:id="@+id/linearRownextstep"
                    style="@style/groupStylegray_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_46pxh"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/txtNextStep"
                        style="@style/txtIntermedium12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_28pxh"
                        android:layout_marginTop="@dimen/_6pxv"
                        android:layout_marginBottom="@dimen/_3pxv"
                        android:layout_weight="0.74"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Next Step"
                        android:backgroundTint="#432818"

                        tools:text="@string/lbl_next_step" />

                    <Button
                        android:id="@+id/imageArrowOne"
                        android:layout_width="@dimen/_20pxh"
                        android:layout_height="@dimen/_1pxh"
                        android:layout_marginStart="@dimen/_9pxh"
                        android:layout_marginTop="@dimen/_13pxv"
                        android:layout_marginEnd="@dimen/_19pxh"
                        android:layout_marginBottom="@dimen/_11pxv"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_arrow1"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_arrow1" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
